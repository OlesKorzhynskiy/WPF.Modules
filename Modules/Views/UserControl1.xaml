<UserControl x:Class="Modules.Views.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Modules.Views"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <Label Content="User control 1" FontSize="16" HorizontalAlignment="Center" />
            <Label Content="{Binding Title}" FontSize="16" HorizontalAlignment="Center" />
            <Button Margin="10" Padding="10 5" Content="Update shared data" Command="{Binding SharedCommand}" />
        </StackPanel>
    </Grid>
</UserControl>
